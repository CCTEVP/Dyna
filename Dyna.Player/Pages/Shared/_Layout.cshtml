<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dynamic Template :: @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Libraries bundle followed by components bundle -->
    <bundle type="css" bundle-type="components" />
    <bundle type="css" bundle-type="libraries" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <main id="app" role="main" class="container-fluid">
        @RenderBody()
    </main>
    <div id="debug">
        <a href="/dynamic/123456789?targetDateTime=2025-08-13T12:00:00">Dynamic sample 01</a><br />
        <a href="/dynamic/987654321?targetDateTime=2025-08-13T12:00:00">Dynamic sample 02</a><br />
        <br/>
        <a href="/interactive/123456789?targetDateTime=2025-08-13T12:00:00">Interactive sample 01</a><br />
        <a href="/interactive/987654321?targetDateTime=2025-08-13T12:00:00">Interactive sample 02</a><br />
        <br />
        <a href="@(Context.Request.Path)@(Context.Request.QueryString.HasValue ? Context.Request.QueryString.Value + "&debug=true" : "?debug=true")">Enable debug mode</a>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <bundle type="js" bundle-type="manager" />
    <bundle type="js" bundle-type="components" />
    <bundle type="js" bundle-type="libraries" />
    <bundle type="js" bundle-type="caching" />
    @await RenderSectionAsync("Scripts", required: false)
    
</body>
</html>